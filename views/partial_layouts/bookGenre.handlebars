{{#each books}}
    
    <div class="row">
        <div class="col s12 m4">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                <span class="card-title flow-text">{{title}}</span>
                <span class="card-title flow-text">{{pubYear}}</span>
                <span class="card-title flow-text">{{price}}</span>
                <span class="card-title flow-text">{{invtentory}}</span>
                <p>{{bookDescription}}.</p>
                </div>
                <div class="card-action">
                <button class="buy" data-id="{{bookID}}">Buy Now</button>
                </div>
            </div>
        </div>
    </div>

{{/each}}