<div class="row">
  <div class="col s12 m4 l3">
    <ul class="collection with-header">
      <li class="collection-header"><h5>View By Category</h5></li>
      {{#each categories}}
        <li class="collection-item">
          <form method="post" action="/category/{{DISTINCT}}">
            <input type="hidden" name="genre" value="{{DISTINCT}}">
            <button class="btn waves-effect waves-light btn-small" type="submit" name="action">{{DISTINCT}}</button>
          </form>
        </li>
      {{/each}}
    </ul>
  </div>

  <div class="col s12 m8 l9">
    <h5>Top Picks</h5>
    <div class="row">
      {{#each books}}
        <div class="col s12 m6 l4">
            <div class="card">
              <div class="card-image">
                <img src="/assets/img/card_image.jpeg">
              </div>
              <div class="card-content">
                <p class="card-title">{{{dataValues.title}}}</p>
                <p>By: {{dataValues.Author.dataValues.firstName}} {{dataValues.Author.dataValues.lastName}}</p>
                <p>Price: ${{dataValues.price}}</p>
              </div>
              <div class="card-action">
                <a class="waves-effect waves-light btn-small cartButton" 
                  value={{dataValues.id}}
                  id="cartButton">Add to Cart</a>
              </div>
            </div>
        </div>
      {{else}}
        <p>no books available</p>
      {{/each}}
    </div>
  </div>
</div>