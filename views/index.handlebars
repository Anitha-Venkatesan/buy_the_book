<div class="row container">
  <br>
  {{#each books}}
    <div class="col s12 m6 l4">
      <div class="card">
        <div class="card-image">
          <img class="images" src="/assets/img/card_image.jpeg">
          <span class="card-title">{{dataValues.title}}</span>
        </div>
        <div class="card-content">
          <p>By: {{dataValues.Author.dataValues.firstName}} {{dataValues.Author.dataValues.lastName}}</p>
          <p>Price: {{dataValues.price}}</p>
        </div>
        <div class="divider brown lighten-3"></div>
        <div class="card-action">
          <a class="blue-grey waves-effect waves-light btn-small cart-button"
              value={{dataValues.id}}
              id="cart-button">Add to Cart</a>
        </div>
      </div>
    </div>
  {{else}}
  <p>no books available</p>
  {{/each}}
</div>
