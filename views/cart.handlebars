
{{#if cart }}
<div class="container">
  <div class="row">
    <div class="col s6 offset-s3">
      <div class="collection">
        <ul class="collection-item">
          <li class="collection-header">
            <h5> Added to the cart successfully</h5>
          </li>
          <br>
          {{#each cart}}
          <li class="collection-item">
            {{#each dataValues.Books}}
            <span class="label label-success">{{dataValues.title}}</span>
            {{/each}}
            <span class="label label-success right-align">{{dataValues.price}}</span></li>
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col s12 m5 l3">
        {{input name="firstName" placeholder="enter name" value=firstName}}
      </div>
    </div>
    {{ else }}
    <div class="row">
      <div class="text-center">
        <h4>No items in Cart</h4>
      </div>
    </div>
    </div>
  {{/if }}